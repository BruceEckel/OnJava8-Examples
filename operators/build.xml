     fork="true"/>
  </target>

  <target name="Equivalence">
    <java
     classname="Equivalence"
     classpath="${java.class.path};${basedir};${basedir}/.."
     dir="../operators/"
     failonerror="true"
     fork="true"/>
  </target>

  <target name="Exponents">
    <java
     classname="Exponents"
     classpath="${java.class.path};${basedir};${basedir}/.."
     dir="../operators/"
     failonerror="true"
